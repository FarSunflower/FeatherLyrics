<!DOCTYPE html>
<html>
    <head>
    <meta charset="utf-8">
    <title>Feather Lyrics</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/style.css">

    

    </head>
    <body>
     <div class="page">
        <header class="header">
            <div class="menublock">
                <img id="logo" src="img/logo.png" alt="feather-lyrics" height="70px" width="70px"> 
                <div class="menulist">
                    <h1 class="menutext" id="lesson" >Lesson</h1>
                    <a href="http://localhost:3000/">
                    <h1 class="menutext" id="home">Home</h1>
                    </a>
                    <a href="http://localhost:3000/vocabulary">
                    <h1 class="menutext" id="vocabulary">Vocabulary</h1>
                    </a>
                </div>
                <div class="menulog">
                    <button class="menutext" id="login" onclick="authorize();">Login</button>
                    <h1 class="menutext" id="info">Info</h1>
                </div>
            </div>
        </header>
        <main class="content">
                <div class="side">
                    <div class="centre">
                        <div class="LogoTitleDesc">
                            <% songs.forEach(function(song) { %>
                            <a href="http://localhost:3000/<%= song.id%>">
                            <div class="song">
                                <div class="songslogo">
                                        <img alt="Song Image" height="100px" width="100px" src=<%= song.SongImage %>>
                                </div>
                                <div class="songtitle">
                                        <h1 id="title" class="text"><%= song.SongTitle %></h1>
                                        <h2 class="text"><%= song.SongAuthor %></h2>
                                </div>
                                <div class="description">
                                    <% if (song) { %>
                                        <h1 id="difficult" class="textsymbol">✰ <%= song.difficult %></h1>
                                        <h2 id="likes" class="textsymbol">♥: <%= song.like %></h2>
                                    <% } %>
                                </div>
                            </div>
                            </a>
                            <% }) %>
                            <!-- ★ -->
                        </div>
                    </div>
                </div>
        </main>
        <footer class="footer">
            <div id="pagination" class="pagination">
                <!-- <a href="#">&laquo;</a> -->
                <% for (let i = 1; i <= 5; i++) { %>
                    <% if (i === pageNumber) { %>
                      <a id="<%= i %>" class="active"><%= i %></a>
                    <% } else { %>
                      <a id="<%= i %>" class="deactive"><%= i %></a>
                    <% } %>
                  <% } %>
                <!-- <a href="#">&raquo;</a> -->
              </div>
        </footer>
    </div>
        <script src="js/script.js"></script>
        <script src="js/pagination.js"></script>
    </body>
</html>